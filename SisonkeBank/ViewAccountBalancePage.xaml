<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SisonkeBank.ViewAccountBalancePage"
             Title="Account Balance"
             BackgroundColor="White">
    
    <StackLayout Padding="10">
        <Label Text="Account Balance" FontSize="Large" HorizontalOptions="Center" />
        <Label x:Name="currentAccountLabel" TextColor="Green"/>
        <Label x:Name="savingsAccountLabel" TextColor="Green"/>
        <Button Text="Back" Clicked="OnBackClicked" />
    </StackLayout>
</ContentPage>
