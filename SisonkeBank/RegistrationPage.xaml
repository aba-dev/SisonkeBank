<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SisonkeBank.RegistrationPage"
             BackgroundColor="White"
             Title="Register">
    <StackLayout Padding="10">
        <Entry x:Name="firstNameEntry" Placeholder="First Name" />
        <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="mobileEntry" Placeholder="Mobile Number" Keyboard="Telephone" />
        <Picker x:Name="genderPicker" Title="Gender">
            <Picker.Items>
                <x:String>Male</x:String>
                <x:String>Female</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
